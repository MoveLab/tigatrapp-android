<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ceab.movelab.tigatrapp">

    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.location.gps" />

    <permission
        android:name="ceab.movelab.tigatrapp.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="ceab.movelab.tigatrapp.permission.MAPS_RECEIVE"/>

    <!-- Required to show current location -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" /> <!-- normal -->

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="ceab.movelab.tigabib.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DarkThemeSelector" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="ceab.movelab.tigabib.SettingsActivity" >
        </activity>
        <activity
            android:name="ceab.movelab.tigabib.LanguageSelectorActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ConsentActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.HelpActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ViewReportsChecklistTab" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ViewReportsPhotosTab" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ViewReportsNotesTab" >
        </activity>
        <activity
            android:name="ceab.movelab.tigabib.ViewReportsTab"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.MissionListActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.MissionActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.AttachedPhotosActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ReportToolActivity" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.GPLViewActivity" >
        </activity>
        <activity
            android:name="ceab.movelab.tigabib.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ceab.movelab.tigabib.SwitchboardActivity"
            android:launchMode="singleTop" >
        </activity>

        <!--<activity android:name="ceab.movelab.tigabib.PhotoGalleryActivity"/>

        <activity android:name="ceab.movelab.tigabib.AboutActivity" />
        <activity android:name="ceab.movelab.tigabib.LicenseActivity" />

        <activity
            android:name="ceab.movelab.tigabib.RSSActivity"
            android:parentActivityName="ceab.movelab.tigabib.SwitchboardActivity" >
            <meta-data
                tools:replace="android:value"
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceab.movelab.tigabib.SwitchboardActivity" />
        </activity>-->

        <receiver android:name="ceab.movelab.tigabib.TigerBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LAUNCHER" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="ceab.movelab.tigatrapp.INTERNAL_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name="ceab.movelab.tigabib.services.FixGet" />
        <service android:name="ceab.movelab.tigabib.services.FixUse" />
        <service android:name="ceab.movelab.tigabib.SyncData" />
        <service android:name="ceab.movelab.tigabib.services.Sample" />

        <!-- [START firebase_service] -->
        <service android:exported="false"
            android:name="ceab.movelab.tigabib.fcm.MyFirebaseMessagingService2">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service android:exported="false"
            android:name="ceab.movelab.tigabib.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <!-- [END firebase_iid_service] -->

        <provider
            android:name=".TigatrappMissionsCP"
            android:authorities="ceab.movelab.tigatrapp.cp.missions"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name=".TigatrappTracksCP"
            android:authorities="ceab.movelab.tigatrapp.cp.tracks"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name=".TigatrappReportsCP"
            android:authorities="ceab.movelab.tigatrapp.cp.reports"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCCHvFv_a2jIZdwbYdBe21VssK5G1cJiBM"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="22e87a4f3bbda2172ac5bb1e707484b1a20e24e5" />

    </application>

</manifest>