<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="ceab.movelab.tigabib"
    android:versionName="1.63" >

    <uses-sdk tools:overrideLibrary="android.support.customtabs" /> <!-- chrome tabs for minSdk < 15 -->

<!--    <uses-sdk android:minSdkVersion="4"android:targetSdkVersion="24" />-->

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />  <!-- normal -->
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />              <!-- normal -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- normal -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />             <!-- normal -->
    <uses-permission android:name="android.permission.VIBRATE" />               <!-- normal -->

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" /> <!-- normal -->

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DarkThemeSelector">
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="ceab.movelab.tigabib.SplashActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ceab.movelab.tigabib.SwitchboardActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" >
        </activity>

        <activity android:name="ceab.movelab.tigabib.PhotoValidationActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.PhotoValidationHelpActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.PhotoValidationWebViewActivity"
                  android:screenOrientation="portrait" />

        <activity android:name="ceab.movelab.tigabib.SettingsActivity"
                  android:screenOrientation="portrait" />
        <activity
            android:name="ceab.movelab.tigabib.LanguageSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="ceab.movelab.tigabib.ConsentActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.HelpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="ceab.movelab.tigabib.TutorialActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/DarkThemeNoActionBar"/>
        <activity android:name="ceab.movelab.tigabib.ViewReportsChecklistTab"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.ViewReportsPhotosTab"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.ViewReportsNotesTab"
                  android:screenOrientation="portrait" />

        <activity
            android:name="ceab.movelab.tigabib.ViewReportsTab"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity android:name="ceab.movelab.tigabib.MissionListActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.NotificationListActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.MissionActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.NotificationActivity"
                  android:screenOrientation="portrait" />

        <activity android:name="ceab.movelab.tigabib.AttachedPhotosActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.ReportToolActivity"
                  android:screenOrientation="portrait" />
        <activity android:name="ceab.movelab.tigabib.GPLViewActivity"
                  android:screenOrientation="portrait" />

<!--    <activity
            android:name="ceab.movelab.tigabib.MapData"
            android:hardwareAccelerated="false"
            android:process=":p2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SwitchboardActivity" />
        </activity>-->
        <activity
            android:name="ceab.movelab.tigabib.MapDataV2Activity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceab.movelab.tigabib.SwitchboardActivity" />
        </activity>
        <activity android:name="ceab.movelab.tigabib.PhotoGalleryActivity" />
<!--        <activity
            android:name="ceab.movelab.tigabib.MapSelector"
            android:process=":p1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReportTool" />
        </activity>-->
        <activity
            android:name="ceab.movelab.tigabib.MapSelectorV2Activity"
            android:screenOrientation="portrait"
            android:process=":p1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceab.movelab.tigabib.ReportToolActivity" />
        </activity>
        <activity android:name="ceab.movelab.tigabib.AboutActivity" />
        <activity android:name="ceab.movelab.tigabib.LicenseActivity" />

        <activity
            android:name="ceab.movelab.tigabib.RSSActivity"
            android:parentActivityName="ceab.movelab.tigabib.SwitchboardActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ceab.movelab.tigabib.SwitchboardActivity" />
        </activity>

        <receiver android:name="ceab.movelab.tigabib.TigerBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LAUNCHER" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="ceab.movelab.tigabib.INTERNAL_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name="ceab.movelab.tigabib.services.FixGet" />
        <service android:name="ceab.movelab.tigabib.services.FixUse" />
        <service android:name="ceab.movelab.tigabib.SyncData" />
        <service android:name="ceab.movelab.tigabib.services.Sample" />

    </application>

</manifest>