<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LightThemeSelector"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_action_collections_view_as_grid" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/reportButtonSite"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/selectorcolors_light" >

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_switchboard_icon_breeding_site" />

                <TextView
                    android:id="@+id/reportButtonSiteText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/switchboard_button_text_sites"
                    android:textColor="@color/switchboard_button_text"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reportButtonAdult"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/selectorcolors_light" >

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_switchboard_icon_adult" />

                <TextView
                    android:id="@+id/reportButtonAdultText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/switchboard_button_text_adult"
                    android:textColor="@color/switchboard_button_text"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reportButtonMap"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/selectorcolors_light" >

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_switchboard_icon_map" />

                <TextView
                    android:id="@+id/reportButtonMapText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/switchboard_button_text_map"
                    android:textColor="@color/switchboard_button_text"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reportMainPic"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selectorcolors_light" >

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_switchboard_icon_gallery" />

                <TextView
                    android:id="@+id/reportButtonGalleryText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingTop="5dip"
                    android:text="@string/switchboard_button_text_gallery"
                    android:textColor="@color/switchboard_button_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mainSiteButton"
            android:layout_width="match_parent"
            android:layout_height="41dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/selectorcolors_clear"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dip"
            android:src="@drawable/atrapaeltigre_site_icon_large" />
    </LinearLayout>

</RelativeLayout>