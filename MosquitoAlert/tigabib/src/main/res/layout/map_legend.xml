<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                android:paddingRight="12dp"
                android:paddingEnd="12dp"
    android:background="@drawable/legend_bg">

    <ImageView
        android:id="@+id/pinImage1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/map_marker_hi_3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pinImage1"
        android:layout_toRightOf="@+id/pinImage1"
        android:layout_marginTop="4dp"

        android:text="Mis informes"/>

    <ImageView
        android:id="@+id/pinImage2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/map_marker_hi_3"
        android:layout_below="@+id/pinImage1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pinImage2"
        android:layout_toRightOf="@+id/pinImage2"
        android:layout_below="@+id/pinImage1"
        android:layout_marginTop="4dp"
        android:text="Informes vecinos"/>
</RelativeLayout>