<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mapLegend"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingStart="5dp"
    android:paddingRight="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/legend_bg">

    <ImageView
        android:id="@+id/pinImage1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/map_marker_hi_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pinImage1"
        android:layout_toRightOf="@+id/pinImage1"
        android:layout_marginTop="2dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:text="@string/my_map_legend_label_my_observations_my_observations"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/pinImage2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/map_marker_hi_2"
        android:layout_below="@+id/pinImage1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pinImage2"
        android:layout_toRightOf="@+id/pinImage2"
        android:layout_below="@+id/pinImage1"
        android:layout_marginTop="2dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:text="@string/my_map_legend_label_nearby_observations_nearby_observations"
        android:textColor="@color/white"/>
</RelativeLayout>