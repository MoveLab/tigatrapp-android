<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/tutorialViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutDots" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_height_dots"
        android:layout_marginBottom="1dp"
        android:layout_above="@id/skipText2"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:id="@+id/tutorialPrevImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/skipText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/tutorial_margin_arrows"
        android:layout_marginStart="@dimen/tutorial_margin_arrows"
        android:layout_marginBottom="@dimen/tutorial_margin_bottom_arrows"
        android:src="@drawable/flecha_nav_esq"/>
    <ImageView
        android:id="@+id/tutorialNextImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/skipText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/tutorial_margin_arrows"
        android:layout_marginEnd="@dimen/tutorial_margin_arrows"
        android:layout_marginBottom="@dimen/tutorial_margin_bottom_arrows"
        android:src="@drawable/flecha_nav_drt" />

    <TextView
        android:id="@+id/skipText2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_height_dots"
        android:layout_alignParentBottom="true"
        android:text="@string/tutorial_1_4"
        style="@style/TutorialTextSkip" />
</RelativeLayout>