<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="16dp"
              android:background="@color/switchboard_bg"
              android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/validPhoto2Image"
        android:layout_width="@dimen/valid_photo_size"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/valid_photo_size"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/valid_photo_margin"
        android:src="@drawable/ic_switchboard_icon_validacio_large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/valid_photo_margin"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/i18n_whatmosquito"
            android:gravity="center"
            style="@style/ValidationQuestion" />
        <ImageView
            android:id="@+id/validHelp2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/info"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/validMosquitoTigerButton"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="match_parent"
            android:text="@string/i18n_tigerbtn"
            android:drawableTop="@drawable/mosquito_tiger"
            style="@style/ValidationPhotoButton" />
        <TextView
            android:id="@+id/validMosquitoYellowButton"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="match_parent"
            android:text="@string/i18n_yellowfeverbtn"
            android:drawableTop="@drawable/mosquito_yellow"
            style="@style/ValidationPhotoButton" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/validNotSure2"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="wrap_content"
            android:text="@string/i18n_notsurebtn2"
            style="@style/ValidationGrayButton" />
        <TextView
            android:id="@+id/validNone2"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="wrap_content"
            android:text="@string/i18n_noneofbothbtn"
            style="@style/ValidationGrayButton" />
    </LinearLayout>


</LinearLayout>