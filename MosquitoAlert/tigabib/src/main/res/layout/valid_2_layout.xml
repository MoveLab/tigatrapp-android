    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/valid_photo_margin"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/ValidationQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/i18n_whatmosquito"/>

        <ImageView
            android:id="@+id/validHelp2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/info"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/valid_photo_margin"
            android:layout_marginStart="@dimen/valid_photo_margin"
            android:layout_marginRight="@dimen/valid_photo_margin_less"
            android:layout_marginEnd="@dimen/valid_photo_margin_less"
            android:orientation="vertical">
            <TextView
                android:id="@+id/validMosquitoTigerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/i18n_tigerbtn"
                android:drawableTop="@drawable/mosquito_tiger"
                style="@style/ValidationPhotoButton" />
            <TextView
                android:id="@+id/validNotSure2"
                style="@style/ValidationGrayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/i18n_notsurebtn2"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/valid_photo_margin_less"
            android:layout_marginStart="@dimen/valid_photo_margin_less"
            android:layout_marginRight="@dimen/valid_photo_margin"
            android:layout_marginEnd="@dimen/valid_photo_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/validMosquitoYellowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/i18n_yellowfeverbtn"
                android:drawableTop="@drawable/mosquito_yellow"
                style="@style/ValidationPhotoButton" />
            <TextView
                android:id="@+id/validNone2"
                style="@style/ValidationGrayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/i18n_noneofbothbtn"/>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>