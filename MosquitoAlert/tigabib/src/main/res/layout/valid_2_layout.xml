<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/switchboard_bg"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/validPhoto2Image"
        android:layout_width="@dimen/valid_photo_size"
        android:layout_height="@dimen/valid_photo_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/valid_photo_margin"
        android:src="@drawable/ic_switchboard_icon_validacio_large"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i18n_whatmosquito"
            android:layout_centerHorizontal="true"
            style="@style/ValidationQuestion" />
        <ImageView
            android:id="@+id/validHelp2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_action_accept_dark"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/validMosquitoTigerButton"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="match_parent"
            android:text="@string/i18n_tigerbtn"
            android:drawableTop="@drawable/mosquito_tiger"
            android:drawablePadding="12dp"
            style="@style/ValidationPhotoButton" />
        <TextView
            android:id="@+id/validMosquitoYellowButton"
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="match_parent"
            android:text="@string/i18n_yellowfeverbtn"
            android:drawableTop="@drawable/mosquito_yellow"
            android:drawablePadding="12dp"
            style="@style/ValidationPhotoButton" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="wrap_content"
            android:text="@string/i18n_notsurebtn2"
            style="@style/ValidationGrayButton" />
        <TextView
            android:layout_width="@dimen/validation_box_width"
            android:layout_height="wrap_content"
            android:text="@string/i18n_noneofbothbtn"
            style="@style/ValidationGrayButton" />
    </LinearLayout>


</LinearLayout>