<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/switchboard_bg"
              android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/validPhoto3Image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/valid_photo_size"
        android:maxHeight="@dimen/valid_photo_size"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/valid_photo_margin"
        android:layout_marginLeft="@dimen/valid_photo_margin"
        android:layout_marginRight="@dimen/valid_photo_margin"
        android:src="@drawable/ic_switchboard_icon_validacio_large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/valid_photo_margin"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/i18n_thorax_question"
            android:layout_gravity="center"
            style="@style/ValidationQuestion" />
        <ImageView
            android:id="@+id/validHelp3Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/info"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/validToraxImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:src="@drawable/tigre_torax"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/validYes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i18n_step1_yes"
            style="@style/ValidationYesNoButton"/>
        <TextView
            android:id="@+id/validNo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i18n_step1_no"
            style="@style/ValidationYesNoButton"/>
    </LinearLayout>


</LinearLayout>