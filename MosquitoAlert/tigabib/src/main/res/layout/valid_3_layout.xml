<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/switchboard_bg"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/validPhoto3Image"
        android:layout_width="@dimen/valid_photo_size"
        android:layout_height="@dimen/valid_photo_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/valid_photo_margin"
        android:src="@drawable/ic_switchboard_icon_validacio_large"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Reconoces el tórax? !!"
            android:layout_toLeftOf="@+id/validHelp3Image"
            android:layout_toStartOf="@+id/validHelp3Image"
            android:layout_centerHorizontal="true"
            style="@style/ValidationQuestion" />
        <ImageView
            android:id="@+id/validHelp3Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_action_accept_dark"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/validToraxImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:src="@drawable/tigre_torax"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/validYes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i18n_step1_yes"
            style="@style/ValidationYesNoButton"/>
        <TextView
            android:id="@+id/validNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i18n_step1_no"
            style="@style/ValidationYesNoButton"/>
    </LinearLayout>


</LinearLayout>