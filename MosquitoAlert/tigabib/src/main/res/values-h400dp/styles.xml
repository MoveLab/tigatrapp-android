<resources>

    <style name="ValidationQuestion">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationYesNoButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/light_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationPhotoButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationGrayButton">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationGrayBigButton">
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ValidationHelpTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpTitleText3">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpTitleText2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpImage">
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="ValidationHelpSubtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ValidationHelpText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationHelpButton">
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">@drawable/validation_btn_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>