<resources>
    <style name="ValidationHelpTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">48dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ValidationHelpTitleText2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ValidationHelpImage">
        <item name="android:layout_margin">64dp</item>
    </style>

    <style name="ValidationHelpSubtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ValidationHelpText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValidationHelpButton">
        <item name="android:textColor">@color/light_orange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingLeft">64dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:background">@drawable/validation_btn_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>