<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ceab.movelab.tigerapp"
    android:versionCode="23"
    android:versionName="1.0-beta" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DarkThemeSelector" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="ceab.movlab.tigerapp.Settings" >
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.LanguageSelector"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.Consent" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.Help" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.ViewReportsChecklistTab" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.ViewReportsPhotosTab" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.ViewReportsNotesTab" >
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.ViewReportsTab"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.TaskListActivity" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.TaskActivity" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.AttachedPhotos" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.ReportTool" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.GPLView" >
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.Switchboard"
            android:allowTaskReparenting="true"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.MapData"
            android:hardwareAccelerated="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Switchboard" />
        </activity>
        <activity android:name="ceab.movlab.tigerapp.PhotoGallery" >
        </activity>
        <activity android:name="ceab.movlab.tigerapp.MapSelector" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReportTool" />
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.About"
            android:allowTaskReparenting="true" >
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.License"
            android:allowTaskReparenting="true" >
        </activity>
        <activity
            android:name="ceab.movlab.tigerapp.RSSActivity"
            android:parentActivityName="Switchboard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Switchboard" />
        </activity>

        <receiver android:name="ceab.movlab.tigerapp.TigerBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LAUNCHER" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="net.movelab.tigatrapp.tigatrapp2014.full.INTERNAL_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name="ceab.movlab.tigerapp.FixGet" />
        <service android:name="ceab.movlab.tigerapp.SyncData" />
        <service android:name="ceab.movlab.tigerapp.Sample" />
        
        <provider
            android:name="ceab.movlab.tigerapp.ContentProviderTasks"
            android:authorities="ceab.movelab.tigerapp.providers.tigertasksprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name="ceab.movlab.tigerapp.ContentProviderTracks"
            android:authorities="ceab.movelab.tigerapp.providers.tigertracksprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name="ceab.movlab.tigerapp.ContentProviderReports"
            android:authorities="ceab.movelab.tigerapp.providers.tigerreportsprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>