<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ceab.movlab.tigre"
    android:versionCode="17"
    android:versionName="v1.03" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DarkThemeSelector" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="ceab.movlab.tigre.TaskActivity" >
        </activity>
        <activity android:name="ceab.movlab.tigre.AttachedPhotos" >
        </activity>
        <activity android:name="ceab.movlab.tigre.ReportTool" >
        </activity>
        <activity android:name="ceab.movlab.tigre.WebMap" >
        </activity>
        <activity android:name="ceab.movlab.tigre.GPLCat" >
        </activity>
        <activity
            android:name="ceab.movlab.tigre.Switchboard"
            android:allowTaskReparenting="true"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ceab.movlab.tigre.ViewDataActivity"
            android:hardwareAccelerated="false" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Switchboard" />
        </activity>
        <activity android:name="ceab.movlab.tigre.PhotoGallery" >
        </activity>
        <activity android:name="ceab.movlab.tigre.MapSelector" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ReportTool" />
        </activity>
        <activity
            android:name="ceab.movlab.tigre.Credits"
            android:allowTaskReparenting="true" >
        </activity>
        <activity
            android:name="ceab.movlab.tigre.About"
            android:allowTaskReparenting="true" >
        </activity>
        <activity android:name="ceab.movlab.tigre.GPLView" >
        </activity>
        <activity android:name="ceab.movlab.tigre.LGPLView" >
        </activity>
        <activity android:name="ceab.movlab.tigre.CreditsDetail" >
        </activity>

        <receiver android:name="ceab.movlab.tigre.TigerBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LAUNCHER" />
                <action android:name="ceab.movlab.tigre.SCHEDULE_SERVICE" />
                <action android:name="ceab.movlab.tigre.UNSCHEDULE_SERVICE" />
            </intent-filter>
        </receiver>

        <service android:name="ceab.movlab.tigre.FixGet" />
        <service android:name="ceab.movlab.tigre.FileUploader" />

        
                <provider
            android:name="ceab.movlab.tigre.ContentProviderTasks"
            android:authorities="ceab.movlab.tigre.providers.tigertasksprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        
        <provider
            android:name="ceab.movlab.tigre.ContentProviderTracks"
            android:authorities="ceab.movlab.tigre.providers.tigertracksprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name="ceab.movlab.tigre.ContentProviderReports"
            android:authorities="ceab.movlab.tigre.providers.tigerreportsprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name="ceab.movlab.tigre.ContentProviderPhotos"
            android:authorities="ceab.movlab.tigre.providers.tigerphotosprovider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>