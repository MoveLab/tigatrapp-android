<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "glow" -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#55ffff00" />

            <stroke android:antialias="true" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval" >
            <solid android:color="#77ff3300" />

            <stroke android:antialias="true" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>