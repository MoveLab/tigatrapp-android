<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_collections_view_as_grid_large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/reportButtonSite"
                android:layout_width="210dip"
                android:layout_height="210dip"
                android:layout_margin="20dp"
                android:background="@drawable/selectorcolors_light"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switchboard_icon_breeding_site_large" />

            <ImageView
                android:id="@+id/reportButtonAdult"
                android:layout_width="210dip"
                android:layout_height="210dip"
                android:layout_margin="20dp"
                android:background="@drawable/selectorcolors_light"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switchboard_icon_adult_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dataMapButton"
                android:layout_width="210dip"
                android:layout_height="210dip"
                android:layout_margin="20dp"
                android:background="@drawable/selectorcolors_light"
                android:contentDescription="@string/dataMap_CD"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switchboard_icon_map_large" />

            <ImageView
                android:id="@+id/reportMainPic"
                android:layout_width="210dip"
                android:layout_height="210dip"
                android:layout_margin="20dp"
                android:background="@drawable/selectorcolors_light"
                android:contentDescription="@string/reportGallery_CD"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switchboard_icon_gallery_large" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mainSiteButton"
            android:layout_width="420dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/selectorcolors_clear"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dip"
            android:src="@drawable/atrapaeltigre_site_icon_large" />
    </LinearLayout>

</RelativeLayout>