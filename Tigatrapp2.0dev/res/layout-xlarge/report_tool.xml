<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/haveYouFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dip"
            android:layout_marginTop="35dip"
            android:gravity="center"
            android:text="@string/haveyoufound"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/brown"
            android:textSize="40sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_brown_gradient" />

        <TextView
            android:id="@+id/letsSee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dip"
            android:gravity="left"
            android:text="@string/letssee"
            android:textColor="@color/brown"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/getHelp"
            android:layout_width="200dip"
            android:layout_height="150dip"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:background="@drawable/blue_rectangle"
            android:contentDescription="@string/checklist_CD"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/checklist_icon_large" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_brown_gradient" />

        <TextView
            android:id="@+id/whereFoundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="30dip"
            android:text="@string/where_found_text"
            android:textColor="@color/brown"
            android:textSize="40sp" />

        <RadioGroup
            android:id="@+id/whereFoundRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/whereRadioButtonHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="@string/here"
                android:textColor="@color/brown"
                android:textSize="35sp" />

            <RadioButton
                android:id="@+id/whereRadioButtonOtherPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/other_place"
                android:textColor="@color/brown"
                android:textSize="35sp" />
        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_brown_gradient" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/buttonFromCamera"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:contentDescription="@string/button_from_camera_CD"
                android:paddingTop="10dip"
                android:scaleType="centerInside"
                android:src="@drawable/camera_pressed_large" />

            <ImageButton
                android:id="@+id/buttonNote"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:contentDescription="@string/button_note_CD"
                android:padding="10dip"
                android:scaleType="centerInside"
                android:src="@drawable/note_pressed_large" />

            <ImageButton
                android:id="@+id/buttonMailingSpec"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:contentDescription="@string/button_spec_CD"
                android:padding="10dip"
                android:scaleType="centerInside"
                android:src="@drawable/mail_pressed_large" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_brown_gradient" />

        <ImageButton
            android:id="@+id/buttonReportSubmit"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_gravity="center"
            android:layout_marginTop="40dip"
            android:background="@drawable/blue_rectangle"
            android:contentDescription="@string/button_submit_CD"
            android:hapticFeedbackEnabled="true"
            android:padding="0dip"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher_large" />

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/submit"
            android:textColor="@color/brown"
            android:textSize="45sp" />
    </LinearLayout>

</ScrollView>