<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LightThemeSelector"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/about_webview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/movelabBanner"
        android:orientation="vertical" >
    </WebView>

    <LinearLayout
        android:id="@+id/movelabBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dip"
            android:contentDescription="@string/movelab_banner_CD"
            android:src="@drawable/logo_movelab_web" />
    </LinearLayout>

</RelativeLayout>